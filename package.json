{
  "name": "mrapi-workspace",
  "version": "2.0.0-beta.3",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "lerna run watch --parallel",
    "build": "tsc -b tsconfig.build.json",
    "clean": "rm -rf ./packages/*/lib/ ./packages/*/*.tsbuildinfo",
    "clean:npm": "rm -rf node_modules ./packages/*/node_modules ./examples/*/node_modules ./**/*/package-lock.json  ./**/*/yarn.lock",
    "clean:all": "npm run clean && npm run clean:npm",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "publish": "ts-node scripts/publish.ts",
    "publish:dry": "DRY_RUN=true ts-node scripts/publish.ts",
    "publish:next": "TAG=next ts-node scripts/publish.ts",
    "publish:next:dry": "TAG=next DRY_RUN=true ts-node scripts/publish.ts",
    "eslint": "pnpm run eslint:packages && pnpm run eslint:scripts",
    "eslint:packages": "eslint packages/**/*.ts",
    "eslint:packages-fix": "eslint packages/**/*.ts --fix",
    "eslint:scripts": "eslint scripts/**/*.ts",
    "eslint:scripts-fix": "eslint scripts/**/*.ts --fix",
    "prettier": "pnpm run prettier:packages && pnpm run prettier:scripts && pnpm run prettier:docs",
    "prettier:packages": "prettier --write packages/**/*.ts",
    "prettier:scripts": "prettier --write scripts/**/*.ts",
    "prettier:docs": "prettier --write README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run eslint"
    }
  },
  "devDependencies": {
    "@types/jest": "^26",
    "@types/node": "*",
    "httpie": "^1",
    "jest": "^26",
    "jest-serializer-path": "^0",
    "jest-watch-typeahead": "^0",
    "lerna": "^3",
    "ts-jest": "^26",
    "typescript": "4.0.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
