{
  "name": "mrapi-workspace",
  "version": "2.0.0-beta.3",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "lerna run watch --parallel",
    "build": "tsc -b tsconfig.build.json",
    "clean": "rm -rf ./packages/*/lib/ ./packages/*/*.tsbuildinfo",
    "clean:npm": "rm -rf node_modules ./packages/*/node_modules ./examples/*/node_modules ./**/*/package-lock.json  ./**/*/yarn.lock",
    "clean:all": "npm run clean && npm run clean:npm",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "publish": "ts-node scripts/publish.ts",
    "publish:dry": "DRY_RUN=true ts-node scripts/publish.ts",
    "publish:next": "TAG=next ts-node scripts/publish.ts",
    "publish:next:dry": "TAG=next DRY_RUN=true ts-node scripts/publish.ts",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write packages/*/src/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run eslint"
    }
  },
  "devDependencies": {
    "@types/jest": "^26",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "eslint": "^7",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "httpie": "^1",
    "jest": "^26",
    "jest-serializer-path": "^0",
    "jest-watch-typeahead": "^0",
    "lerna": "^3",
    "prettier": "^2",
    "ts-jest": "^26",
    "typescript": "4.0.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
