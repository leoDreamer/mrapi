{
  "name": "mrapi-workspace",
  "version": "2.0.0-beta.3",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "clean": "pnpm recursive run clean && rm -rf node_modules && rm -rf pnpm-lock.yaml",
    "build": "tsc -b tsconfig.build.json",
    "build2": "pnpm run build --filter @mrapi/types && pnpm run build --filter @mrapi/common && pnpm run build --filter @mrapi/router && pnpm run build --filter @mrapi/app && pnpm run build --filter @mrapi/graphql && pnpm run build --filter @mrapi/db && pnpm run build --filter @mrapi/service && pnpm run build --filter @mrapi/gateway && pnpm run build --filter @mrapi/cli",
    "dev": "pnpm run --parallel watch",
    "publish": "ts-node scripts/publish.ts",
    "publish:dry": "DRY_RUN=true ts-node scripts/publish.ts",
    "publish:next": "TAG=next ts-node scripts/publish.ts",
    "publish:next:dry": "TAG=next DRY_RUN=true ts-node scripts/publish.ts",
    "eslint": "pnpm run eslint:packages && pnpm run eslint:scripts",
    "eslint:packages": "eslint packages/**/*.ts",
    "eslint:packages-fix": "eslint packages/**/*.ts --fix",
    "eslint:scripts": "eslint scripts/**/*.ts",
    "eslint:scripts-fix": "eslint scripts/**/*.ts --fix",
    "prettier": "pnpm run prettier:packages && pnpm run prettier:scripts && pnpm run prettier:docs",
    "prettier:packages": "prettier --write packages/**/*.ts",
    "prettier:scripts": "prettier --write scripts/**/*.ts",
    "prettier:docs": "prettier --write README.md",
    "generate:schema": "pnpm recursive run generate:schema"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run eslint"
    }
  },
  "devDependencies": {
    "@types/jest": "^26",
    "@types/node": "*",
    "httpie": "^1",
    "jest": "^26",
    "jest-serializer-path": "^0.1.15",
    "jest-watch-typeahead": "^0",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26",
    "typescript": "^4"
  },
  "resolutions": {
    "graphql": "15.3.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "__npminstall_done": false
}
